<style>
body {
  background-image: url('https://wallpaperaccess.com/full/1580197.jpg');
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: cover;
}
</style>

<center>
<h2><a href="/" style="color:white;">Intro Page</a><a style="color:white;padding-left:10px" href="/teams">Team Index</a><a style="color:white;padding-left:10px" href="/players">Player Index</a></h2>

<h1 style="color:white;font-size:42px;border:solid white"> <%= @team.city %> <%= @team.name %> </h1>

<div style="padding:20px">
  <%= button_to "Add New Player", "/teams/#{@team.id}/players/new", method: :get %>
</div>

<a href="/teams/<%= @team.id %>/players"><h3 style="color:white;"> All <%= @team.name %> Players</h3></a>

<div style="width:500px;margin:0px 100px 50px 100px;border:solid black;background-image: url('https://www.ignitionapg.com/wp-content/uploads/2017/03/MLB-Background-1.jpg');color:black;padding:15px;font-size:18px">
  <h2><%= @team.city %> <%= @team.name %></h2>
  <p><b>Rank: </b><%= @team.rank %></p>
  <p><b>First Place Team: </b><%= @team.first_place %></p>
  <p><b>Created At: </b><%= @team.created_at %></p>
  <p><b>Updated At: </b><%= @team.updated_at %></p>
  <p><b>Total Players: </b><%= @team.player_count %></p>

  <div style="padding:10px">
    <%= button_to "Update Team", "/teams/#{@team.id}/edit", method: :get %>
  </div>
  <div style="padding:10px">
    <%= button_to "Delete Team", "/teams/#{@team.id}", method: :delete %>
  </div>
</div>


</center>
